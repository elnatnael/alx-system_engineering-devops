#!/usr/bin/env bash
# Installs Nginx, sets up a Hello World page, and starts the service without systemctl

set -e

# Update package list and install nginx
apt-get update -y
apt-get install -y nginx

# Create custom index.html
echo "Hello World!" > /var/www/html/index.html

# Start nginx using service (not systemctl)
service nginx start || /etc/init.d/nginx start

# Ensure nginx is enabled to start on boot using update-rc.d (if not using systemctl)
update-rc.d nginx defaults
