#!/bin/bash
# 1-install_nginx_web_server
# Install nginx, configure it to serve "Hello World!" on port 80
# No systemctl usage allowed for restart (use service command instead)

# Update package list and install nginx silently with -y
apt-get update -y
apt-get install -y nginx

# Replace the default nginx index.html with "Hello World!"
echo "Hello World!" > /var/www/html/index.html

# Restart nginx using service (not systemctl)
service nginx restart
